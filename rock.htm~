<script type="text/javascript" >
function read(){
var name = document.getElementById("field").value ;
var round = document.getElementById("rounds").value;
if(name == "" || round == "" || round == 0)
alert("PROVIDE DETAILS CAREFULLY");
else{
localStorage["name"] = name ;
localStorage["round"] = round; 
window.location ="rock1.htm"; 
}


}

</script>
